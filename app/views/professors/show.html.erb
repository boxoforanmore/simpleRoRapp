<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @professor.name %>
</p>

<p>
  <strong>Office:</strong>
  <%= @professor.office %>
</p>

<p>
  <strong>Phone:</strong>
  <%= @professor.phone %>
</p>

<p>
  <strong>Email:</strong>
  <%= @professor.email %>
</p>

<p>
  <strong>Department:</strong>
  <%= @professor.department %>
</p>

<p>
  <% # Help from: ActiveRecord PowerPoint %>
  <strong>Courses:</strong>
  <% @professor.sections.each do |section| %>
  <li>  <%= section.course.semester %>
        <%= section.course.year %> 
        <%= section.course.name %>
        <%= section.course.number %>
        <%= section.number %>
        <%= section.day %>
        <%= section.begintime %>
        <%= section.endtime %>
  <% end %>
</p>

