<%= form_with(model: course, local: true) do |form| %>
  <% if course.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(course.errors.count, "error") %> prohibited this course from being saved:</h2>

      <ul>
      <% course.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label "Course Name" %>
    <%= form.text_field :name, id: :course_name %>
  </div>

  <div class="field">
    <%= form.label "Course Number" %>
    <%= form.number_field :number, id: :course_number %>
  </div>

  <div class="field">
    <%= form.label :department %>
    <%= form.text_field :department, id: :course_department %>
  </div>

  <div class="field">
    <%= form.label "Credits" %>
    <%= form.number_field :credit, id: :course_credit %>
  </div>

  <% # Help from: Form Helpers Ruby Guide (Bigg et al., 2017) %>
  <div class="field">
    <%= form.label :semester %>
    <%= form.select :semester, ['Fall', 'Spring', 'Summer'] %>
  </div>

  <% # Help from: Form Helpers Ruby Guide (Bigg et al., 2017) %>
  <div class="field">
    <%= form.label :year %>
    <%= form.select :year, (Time.zone.now.year)...(Time.zone.now.year+3) %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
