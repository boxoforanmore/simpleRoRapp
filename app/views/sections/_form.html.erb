<%= form_with(model: section, local: true) do |form| %>
  <% if section.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(section.errors.count, "error") %> prohibited this section from being saved:</h2>

      <ul>
      <% section.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <% # Help from: ActiveRecord PowerPoint %>
  <div class="field">
    <%= form.label :professor_id %>
    <%= form.select(:professor_id, options_from_collection_for_select(Professor.all, :id, :name)) %>
  </div>

  <% # Help from: ActiveRecord PowerPoint %>
  <div class="field">
    <%= form.label :course_id %>
    <%= form.select(:course_id, options_from_collection_for_select(Course.all, :id, :name)) %>
  </div>

  <div class="field">
    <%= form.label :crn %>
    <%= form.number_field :crn, id: :section_crn %>
  </div>

  <div class="field">
    <%= form.label "Section Number" %>
    <%= form.number_field :number, id: :section_number %>
  </div>

  <div class="field">
    <%= form.label :room %>
    <%= form.text_field :room, id: :section_room %>
  </div>

  <div class="field">
    <%= form.label "Days" %>
    <%= form.text_field :day, id: :section_day %>
  </div>

  <% # Help from: Form Helpers Ruby Guide (Bigg et al., 2017) %>
  <div class="field">
    <%= form.label "Begin Time" %>
    <%= form.time_field :begintime, id: :section_begintime %>
  </div>

  <% # Help from: Form Helpers Ruby Guide (Bigg et al., 2017) %>
  <div class="field">
    <%= form.label "End Time" %>
    <%= form.time_field :endtime, id: :section_endtime %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
